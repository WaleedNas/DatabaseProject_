@page "/BookDetails"
@inject NavigationManager navManager
@inject IUserData userData
@inject IJSRuntime JS

<h1>Book Details</h1>

<div style="margin-bottom:20px">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @userModel.Username
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @userModel.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @userModel.LastName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @userModel.Email
        </dd>
        <dt class="col-sm-2">
            Password
        </dt>
        <dd class="col-sm-10">
            @userModel.PasswordHash
        </dd>
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @userModel.UserType
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" href="/UserEdit">Edit</a> |
    <input class="btn btn-primary" type="button" value="Print" onclick="window.print();" /> |
    <a class="btn btn-primary" href="javascript: history.go(-1)">Back to List</a>
</div>

@code {
    // get user id from url
    User userModel = new User();

}
